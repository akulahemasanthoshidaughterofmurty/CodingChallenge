# Definition for singly-linked list.
# class ListNode:
#     def __init__(self, val=0, next=None):
#         self.val = val
#         self.next = next
class Solution:
    def getDecimalValue(self, head: ListNode) -> int:
        c=0
        res=0
        temp=head
        while head:
                c=c+1
                head=head.next
        c=c-1
        while temp:
            if temp.val==1:
                res=res+2**c
                c=c-1
                temp=temp.next

            else:
                c=c-1
                temp=temp.next
        return res
        
